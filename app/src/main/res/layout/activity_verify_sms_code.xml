<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".StartUpActivity">

    <EditText
        android:id="@+id/edit_text_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="电话号"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        />

    <EditText
        android:id="@+id/edit_text_sms_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="验证码"
        android:layout_below="@+id/edit_text_phone_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp" />

    <Button
        android:id="@+id/button_verify_sms_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_step"
        android:layout_below="@+id/edit_text_sms_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp" />

    <Button
        android:id="@+id/button_send_sms_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_sms_code"
        android:layout_alignBottom="@+id/edit_text_sms_code"
        android:layout_toRightOf="@+id/button_verify_sms_code"
        android:layout_toEndOf="@+id/button_verify_sms_code" />
</RelativeLayout>
