<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyChatActionBarTheme" parent="AppTheme">
        <item name="android:homeAsUpIndicator">@mipmap/arrow</item>
        <item name="android:actionBarStyle">@style/MyChatActionBar</item>
    </style>

    <style name="MyChatActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/base_color</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:labelTextSize">20sp</item>
        <!--<item name="android:displayOptions">showHome|showTitle</item>-->
        <!--<item name="android:icon">@android:color/transparent</item>-->
    </style>

    <style name="MyActionBarTitleText">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MyChatActionBarWithoutUpIndicatorTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/MyChatActionBar</item>
    </style>

    <style name="MyChatActionBarWithoutUpIndicator" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/base_color</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:labelTextSize">20sp</item>
        <!--<item name="android:displayOptions">showHome|showTitle</item>-->
        <!--<item name="android:icon">@android:color/transparent</item>-->
    </style>

    <style name="MyChat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyChat.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyChat.TextView._Black">
        <item name="android:textColor">@color/base_color_text_black</item>
    </style>

    <style name="MyChat.TextView._Orange">
        <item name="android:textColor">@color/dialog_color_title</item>
    </style>

    <style name="WelcomeActivityButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="layout_heightPercent">7.5%</item>
        <item name="layout_widthPercent">70%</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/button_text_welcome_activity</item>
    </style>

    <style name="LoginActivity">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="layout_widthPercent">65%</item>
        <item name="layout_heightPercent">7.5%</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="LoginActivity.EditText">
        <item name="android:background">@mipmap/input_bg</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="LoginActivity.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/base_color</item>
    </style>

    <!-- dialog -->
    <style name="TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHighlight">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:textColorLink">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.DialogWindowTitle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/TextAppearance.DialogWindowTitle</item>
    </style>

    <style name="alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
