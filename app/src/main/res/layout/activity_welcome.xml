<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffae8">

    <ImageView
        android:id="@+id/image_view_welcome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="55.6%"
        app:layout_heightPercent="31.25%"
        app:layout_marginTopPercent="12%"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_view_app_name_and_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="2%"
        android:layout_below="@id/image_view_welcome"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="@string/welcome_text"
        android:textColor="@color/standard_color_1"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/button_register"
        style="@style/WelcomeActivityButton"
        app:layout_marginTopPercent="16%"
        android:layout_below="@id/text_view_app_name_and_version"
        android:text="@string/register"
        />

    <Button
        android:id="@+id/button_login"
        style="@style/WelcomeActivityButton"
        app:layout_marginTopPercent="5%"
        android:layout_below="@id/button_register"
        android:text="@string/login"/>
</android.support.percent.PercentRelativeLayout>
